                        <Button fx:id="backButton" mnemonicParsing="false" text="Back" />
                     </children>
                  </HBox>
                  <HBox prefHeight="421.0" prefWidth="297.0">
                     <children>
                        <VBox prefHeight="391.0" prefWidth="132.0">
                           <children>
                              <VBox alignment="CENTER" prefHeight="423.0" prefWidth="132.0" spacing="10.0">
                                 <children>
                                    <Label fx:id="nextLabel" text="Up Next">
                                       <font>
                                          <Font size="18.0" />
